/* pages/activity/activity.wxss */
page{
  position: relative;
}
.img-box{
  width: 100%;height: 100%;
  display: flex;align-items: center;
}
.img-box image{
  width: 100%;
}
.fixed-button{
  position: fixed;bottom: 30rpx;right: 30rpx;z-index: 999;
  width: 92rpx;height: 92rpx;
}
button{padding: 0;border-radius: 0;background: transparent}
.button-hover{background: transparent;}
button::after{border: none}
.fixed-button image{width: 100%;height: 100%;display: block;}
