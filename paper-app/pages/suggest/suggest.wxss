/* pages/suggest/suggest.wxss */
page{background: #F5F6F8;position: relative;}
.cont-head{
  position: fixed;width: 100%;padding: 20rpx 0;font-size: 30rpx;color: #C7C7CC;background: #fff;
  z-index: 1000;
}
.head-container{
  width: 100%;height: 100%;display: flex;justify-content: space-between;
}
.head-item{
  text-align: center;width: 50%;
}
.head-item-active{color: #222;}
.lt-red-line{
  position: absolute;left: 168rpx;bottom: 0;
  width: 40rpx;height: 6rpx;background: #4E98F1;
}
.rt-red-line{
  position: absolute;right: 168rpx;bottom: 0;
  width: 40rpx;height: 6rpx;background: #4E98F1;
}
.banner-container{
  padding: 20rpx;
}
.banner-img{
  display: block;width: 710rpx;height: 200rpx;margin: 0 auto;
}
.list-group{background: #fff;margin-bottom: 120rpx;}
.list-items{padding: 40rpx 30rpx;border-bottom: 1rpx solid #E5E7ED;}
.list-items:last-child{border: none;}
.user-infos{display: flex;font-size: 28rpx;color: #666;align-items: center;}
.user-avatar{
  width: 60rpx;height: 60rpx;background: #F5F6F8;
  border-radius: 50%;border: 1rpx solid #C7C7CC;margin-right: 20rpx;
}
.uname{
  max-width: 210rpx;
  overflow: hidden;white-space:nowrap;text-overflow:ellipsis;word-break: break-all;
}
.m-contents{
  margin-left: 80rpx;margin-top: 10rpx;
}
.user-content{
  background: #F5F6F8;width: 550rpx;border-radius: 10rpx;padding: 20rpx 30rpx 30rpx;
  font-size: 24rpx;color: #666;margin-bottom: 12rpx;
}
.botom-infos{
  font-size: 24rpx;color: #888;display: flex;align-items: center;justify-content: space-between;
}
.good-icon{
  width: 32rpx;height: 32rpx;margin-left: 12rpx;
}
.comment-view{
  position: fixed;left: 0;bottom: 0;width: 100%;height: 88rpx;background: #fff;padding: 10rpx 0 0;
  display: flex;justify-content: space-between;align-items: center;font-size: 32rpx;
}
.text-cont{
  width: 478rpx;height: 80rpx;line-height: 80rpx;padding-left: 40rpx;margin-bottom: 10rpx;
  color: #888;border-radius: 40rpx;background: #F5F6F8;margin-left: 20rpx;
}
.comment-text{
  width: 478rpx;height: 80rpx;padding-left: 40rpx;color: #333;margin-bottom: 10rpx;
  border-radius: 40rpx;background: #F5F6F8;margin-left: 20rpx;
}
.send-btn{
  margin-bottom: 10rpx;
  width: 152rpx;height: 72rpx;border-radius: 36rpx;background: #4E98F1;color: #fff;margin-right: 30rpx;text-align: center;line-height: 72rpx;
}
.prise-cont{
  display: flex;align-items: center;
}
