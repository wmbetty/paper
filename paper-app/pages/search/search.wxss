/* pages/search/search.wxss */
page{position: relative;background: #F5F6F8}
.header{
    width: 100%;height: 64rpx;background: #fff;
    position: fixed;left: 0;top: -10rpx;padding-top: 74rpx;

}
.phX-header{top:34rpx;}
.header-icons{
    width: 160rpx;height: 100%;
    display: flex;align-items: center;margin-left: 72rpx;padding-left: 24rpx;border-radius: 30rpx;
}
.back-icon{width: 38rpx;height: 38rpx;margin-right: 56rpx;}
.home-icon{width: 38rpx;height: 38rpx;}
.s-content{padding: 40rpx;margin-top: 116rpx;}
.phX-s-content{margin-top: 146rpx;}
.search-bar{
    width: 100%;height: 120rpx;background: #fff;
    position: fixed;top:120rpx;
}
.phX-search-bar{top:152rpx;}
.search-container{
    padding: 0 40rpx;margin-top: 18rpx;
    position: relative;
}
.search-box{
    background: #222;width: 670rpx;height: 60rpx;color: #F4F4F4;font-size: 28rpx;
    display: flex;align-items: center;justify-content: space-between;border-radius: 30rpx;margin-bottom: 40rpx;
}
.close-icon{width: 36rpx;height: 36rpx;margin-right: 24rpx;}
.s-content-left{
    display: flex;align-items: center;
}
.search-icon{width: 32rpx;height: 32rpx;margin-right: 20rpx;margin-left: 30rpx;}
.search-input{
    width: 370rpx;font-size: 28rpx;
}
.search-tag{
    height: 60rpx;border-radius: 30rpx;border: 1px solid #E7A235;color: #E7A235;margin-right: 30rpx;
    text-align: center;line-height: 60rpx;padding: 0 34rpx;display: inline-block;margin-bottom: 20rpx;
}
.tab-content{position: fixed;left: 0;top: 240rpx;width: 100%;}
.first-item{
    width: 100%;height: 480rpx;margin-bottom: 20rpx;
}
.first-img{width: 100%;height: 100%;background: #888;display: block}
.same-scroll-item{
    background: #222;padding: 30rpx 46rpx 26rpx;border-bottom: 1px solid #000;
}
.img-container{
    width: 658rpx;height: 428rpx;margin-bottom: 38rpx;display: flex;align-items: center;justify-content: center;
    background: url("https://gifres.79643.com/mini_gif/2018/09/06/default_img.png") no-repeat center;
}
.img-item{max-width: 100%;max-height: 100%;display: block;}
.gif-info{
    display: flex;justify-content: space-between;align-items: center;font-size: 28rpx;color: #C7C7CC;
}
.gif-time{color: #888;font-size: 24rpx;}
.info-tag{display: inline-block;margin-right: 30rpx;}
.paper-cate-container{
    width: 160rpx;height: 80rpx;background: #E5E7ED;border-radius: 40rpx;margin-right: 30rpx;
    position:absolute;top:0;text-align: center;line-height: 80rpx;
}
.select-list{
    height: 240rpx;
    /*transition: all 0.3s ease-in;*/
}
.search-input-container{
    width: 480rpx;height: 80rpx;display: flex;background: #E5E7ED;border-radius: 40rpx;margin-left: 190rpx;align-items: center;
}
.break-line{
    width: 100rpx;height: 2rpx;background: #C7C7CC;margin: 0 auto;
}
.down-arrow{
    position: absolute;right: 22rpx;top: 36rpx;width: 16rpx;height: 10rpx;
    background: url("data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAABgAAAAPBAMAAAAMihLoAAAAHlBMVEUAAABmZmZnZ2dnZ2dnZ2dmZmaAgIBnZ2dmZmZmZmYgxTU/AAAACXRSTlMA5sZmORkGmZicQWXEAAAAVElEQVQI12PonAkHMxiSEBw1BlZJGHtiAAODJ4wzhYGBgRnGMWAAgkoIezqIDTNCDcxhlYRqBwNPiHYIYIZrBxsB1Q4xAqodagREO9QIsHaYERDtAGpPNg9yK3U5AAAAAElFTkSuQmCC") no-repeat;
    background-size: 100% 100%;
}
.s-main-cont{margin-top: 230rpx;}
.phX-s-main-cont{
    margin-top: 280rpx;
}
.tags-container{
    padding: 30rpx 0 0 40rpx;
}
.list-item{
    width: 49.25%;height: 636rpx;background: #fff;display: inline-block;box-sizing: border-box;margin-bottom: 10rpx;
}
.list-item:nth-child(odd){margin-right: 11rpx}
.img-container{
    width: 322rpx;height: 476rpx;margin: 20rpx auto 32rpx;
    background: #E5E7ED;
}
.img-container image{
    display: block;width: 100%;height: 100%;
    /*opacity: 0;*/
}
.img-infos-cont{padding: 0 24rpx;}
.img-name{font-size: 28rpx;color: #222;overflow: hidden;white-space:nowrap;text-overflow:ellipsis;word-break: break-all;margin-bottom: 14rpx;}
.img-infos{
    font-size: 24rpx;color: #888;display: flex;justify-content: space-between;
}
.img-num{color: #E7A235}
.search-list-group{padding: 10rpx 8rpx 0;}
.cate-title{color: #7A70C8;font-size: 32rpx;}
.title-item{
    color: #666;font-size: 32rpx;
}