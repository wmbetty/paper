/* pages/details/details.wxss */
page{position: relative}
.img-group{
  padding: 20rpx 30rpx 0;background: #fff;
  display: flex;justify-content: space-between;flex-flow: row wrap;
}

.img-item{
  width: 336rpx;height: 496rpx;margin-bottom: 20rpx;
  background: rgba(166, 204, 182, 0.48);border-radius: 10rpx;
}
.img-item:nth-child(2n){background: rgba(217, 211, 200, 0.48)}
.img-item:nth-child(3n){background: rgba(191, 209, 204, 0.48)}
.img-item:nth-child(4n){background: rgba(161, 203, 222, 0.48)}
.cont-head{
  position: fixed;width: 100%;padding: 20rpx 30rpx;font-size: 30rpx;color: #888;border-bottom: 1rpx solid #E5E7ED;background: #fff;
  overflow: hidden;white-space:nowrap;text-overflow:ellipsis;word-break: break-all;
}
.movie-img-item{
  width: 336rpx;height: 336rpx;
}
